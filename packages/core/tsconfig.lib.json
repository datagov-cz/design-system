{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"declaration": true,
		"composite": true,
		"types": [
			"node"
		]
	},
	"exclude": [
		"dist/**",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.stories.ts",
		"**/*.stories.js"
	],
	"include": [
		"**/*.js",
		"**/*.jsx",
		"**/*.ts",
		"**/*.tsx"
	]
}
